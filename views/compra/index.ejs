<% include ../comum-admin/cabecalho %>
	<div class="page-wrapper" data-menu-marcado="vendas">
		<div class="container">
			<div class="page-header">
				<h1>Lista de vendas finalizadas <small>Todos as vendas concluídas com sucesso na loja.</small></h1>
			</div>
			<div class="row">
				<% include ../comum-admin/menu %>
					<div class="col-md-10">
						<div class="col-md-12 margin-bottom-10">
							<form class="form-inline pull-right" method="GET" action="/admin/compra/ver">
								<div class="form-group">
									<label class="sr-only" for="exampleInputAmount">Número da venda</label>
									<input type="text" name="numero" class="form-control" id="exampleInputAmount" placeholder="Número da venda">
								</div>
								<button type="submit" class="btn btn-primary">Buscar</button>
							</form>
						</div>
						<div class="col-md-12">
							<table class="table table-hover" id="tabela-vendas">
								<thead>
									<tr>
										<th>#</th>
										<th>Número</th>
										<th>Data</th>
										<th>Quantidade produtos</th>
										<th>Valor</th>
										<th>Valor frete</th>
										<th>Valor total</th>
									</tr>
								</thead>
								<tbody>
									<% for (var i = 0; i < compras.length; i++) { %>
										<%var compra = compras[i];%>
											<tr>
												<td><a href="/admin/compra/ver?numero=<%=compra.numero%>"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
												<td>
													<%=compra.numero%>
												</td>
												<td data-datetime="true">
													<%=compra.data%>
												</td>
												<td>
													<%=compra.produtos.length%>
												</td>
												<td data-moeda="true">
													<%=compra.valor%>
												</td>
												<td data-moeda="true">
													<%=compra.valorFrete%>
												</td>
												<td data-moeda="true">
													<%=compra.valorTotal%>
												</td>
											</tr>
											<%}%>
								</tbody>
							</table>
						</div>
					</div>
			</div>
		</div>
		<% include ../comum-admin/rodape %>