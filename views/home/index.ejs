<% include ../comum-site/cabecalho %>
	<link href="/stylesheets/assets/global/plugins/fancybox/jquery.fancybox.css" rel="stylesheet">
	<link href="/stylesheets/assets/global/plugins/carousel-owl-carousel/owl.carousel.css" rel="stylesheet">
	<link href="/stylesheets/assets/global/plugins/slider-layer-slider/css/layerslider.css" rel="stylesheet">
	<link href="/stylesheets/assets/frontend/pages/css/style-layer-slider.css" rel="stylesheet">

	<div class="page-slider margin-bottom-35">

		<div id="layerslider" style="width: 100%; height: 494px; margin: 0 auto;">

			<%for (var i = 0; i < produtosDestaque.length; i++) {%>
				<%var produto = produtosDestaque[i];%>

					<div class="ls-slide ls-slide1" data-ls="offsetxin: right; slidedelay: 7000; transition2d: 24,25,27,28;">

						<img src="<%=produto.urlFotoPainel%>" class="ls-bg" alt="Slide background">

						<div class="ls-l ls-title" style="top: 96px; left: 35%; white-space: nowrap;" data-ls="
			fade: true; 
			fadeout: true; 
			durationin: 750; 
			durationout: 750; 
			easingin: easeOutQuint; 
			rotatein: 90; 
			rotateout: -90; 
			scalein: .5; 
			scaleout: .5; 
			showuntil: 4000;
			"><b><%=produto.nome%></b></div>

						<div class="ls-l ls-mini-text" style="top: 338px; left: 35%; white-space: nowrap;" data-ls="
			fade: true; 
			fadeout: true; 
			durationout: 750; 
			easingin: easeOutQuint; 
			delayin: 300; 
			showuntil: 4000;
			">
							<%=produto.descricao%>
						</div>
					</div>
					<%}%>
		</div>
	</div>

	<div class="main">
		<div class="container">
			<div class="row margin-bottom-40">
				<div class="col-md-12 sale-product">
					<h2>Produtos em destaque</h2>
					<div class="owl-carousel owl-carousel5">
						<%for (var i = 0; i < produtosDestaque.length; i++) {%>
							<%var produto = produtosDestaque[i];%>
								<div data-produto="<%=JSON.stringify(produto)%>">
									<div class="product-item">
										<div class="pi-img-wrapper">
											<img style="height:325px" src="<%=produto.urlFotoLista%>" class="img-responsive" alt="<%=produto.nome%>">
											<div>
												<a href="<%=produto.urlFotoLista%>.jpg" class="btn btn-default fancybox-button">Zoom</a>
												<a href="javascript:void(0);" data-div-modal="#modal-produto" class="btn btn-default fancybox-fast-view">Ver</a>
											</div>
										</div>
										<h3 class="ellipsis">
											<a href="/produto/ver/<%=produto._id%>">
												<%=produto.nome%>
											</a>
										</h3>
										<div class="pi-price" data-moeda="true">
											<%=produto.preco%>
										</div>
										<button type="button" class="btn btn-default add2cart">Adicionar</a>
						</div>
					</div>
					<%}%>
				</div>
			</div>
		</div>
		<div class="row margin-bottom-40 ">			
			<div class="sidebar col-md-3 col-sm-4">
				<ul class="list-group margin-bottom-25 sidebar-menu">
					<%for (var i = 0; i < categorias.length; i++) {%>
					<%var categoria = categorias[i];%>
						<li class="list-group-item clearfix">
							<a href="/produtos?cat=<%=categoria._id.toString()%>"><i class="fa fa-angle-right"></i> <%=categoria.nome%></a>
						</li>
					<%}%>
				</ul>
			</div>
			<%if(produtosMaisVendidos.length){%>
			<div class="col-md-9 col-sm-8">
				<h2>Mais vendidos</h2>
				<div class="owl-carousel owl-carousel3">
					<%for (var i = 0; i < produtosMaisVendidos.length; i++) {%>
					<%var produto = produtosMaisVendidos[i];%>
					<div data-produto="<%=JSON.stringify(produto)%>">
						<div class="product-item">
							<div class="pi-img-wrapper">
								<img style="height:325px" src="<%=produto.urlFotoLista%>" class="img-responsive" alt="<%=produto.nome%>">
								<div>
									<a href="<%=produto.urlFotoLista%>.jpg" class="btn btn-default fancybox-button">Zoom</a>
									<a href="javascript:void(0);" data-div-modal="#modal-produto" class="btn btn-default fancybox-fast-view">Ver</a>
								</div>
							</div>
							<h3 class="ellipsis"><a href="/produto/ver/<%=produto._id%>"><%=produto.nome%></a></h3>
							<div class="pi-price" data-moeda="true"><%=produto.preco%></div>
							<button type="button" class="btn btn-default add2cart">Adicionar</button>
									</div>
								</div>
								<%}%>
					</div>
				</div>
				<%}%>
			</div>
		</div>
	</div>
	</div>

	<% include ../comum-site/rodape %>
		<%-bundleJsIndexSite%>

			<script type="text/<html" id="scpProduto">
				<% include ../comum-site/modal-produto %>
			</script>